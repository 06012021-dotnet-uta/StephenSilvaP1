@model IEnumerable<WebStore.Models.Order>

<div class="conntainner p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Order List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Order" asp-action="Create" class="btn btn-primary">
                Create New Order
            </a>
        </div>
    </div>
</div>

<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Order Number
                </th>
                <th>
                    Customer
                </th>
                <th>
                    Store
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.OrderNumber</td>
                    <td width="50%">@obj.CustomerID</td>
                    <td width="50%">@obj.StoreID</td>
                </tr>
            }
        </tbody>
    </table>
}




