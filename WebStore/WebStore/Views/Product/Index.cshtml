@model IEnumerable<WebStore.Models.Product>

<div class="conntainner p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                Create New Product
            </a>
        </div>
    </div>
</div>

<br />
<br />
@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Product Name
                </th>
                <th>
                    Product Desc
                </th>
                <th>
                    Price
                </th>
            </tr>

        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="50%">@obj.ProductName</td>
                    <td width="50%">@obj.ProductDesc</td>
                    <td width="50%">@obj.Price</td>
                </tr>
            }
        </tbody>
    </table>
}




